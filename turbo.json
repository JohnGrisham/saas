{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "client#build": {
      "dependsOn": ["^build", "$API_ENDPOINT", "$API_KEY"]
    },
    "auth#build": {
      "dependsOn": ["^build", "$GITHUB_ID", "$GITHUB_SECRET"]
    },
    "web#build": {
      "dependsOn": ["^build", "$JWT_SECRET"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
