{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "client#build": {
      "dependsOn": ["^build", "$API_ENDPOINT", "$API_KEY"]
    },
    "auth#build": {
      "dependsOn": [
        "^build",
        "$COGNITO_CLIENT_ID",
        "$COGNITO_CLIENT_SECRET",
        "$COGNITO_ISSUER",
        "$GITHUB_ID",
        "$GITHUB_SECRET",
        "$PRIMARY_USER_LIST_ID"
      ]
    },
    "web#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_AWS_REGION",
        "$NEXT_PUBLIC_COGNITO_DOMAIN",
        "$JWT_SECRET",
        "$NEXT_PUBLIC_ROOT_URL",
        "$NEXT_PUBLIC_USER_POOL_ID",
        "$NEXT_PUBLIC_USER_POOL_CLIENT_ID"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
