{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "codegen": {
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^dev", "ui#build"]
    },
    "generate-tailwind-theme": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "storybook": {
      "dependsOn": []
    },
    "auth#build": {
      "dependsOn": [
        "$API_KEY",
        "$COGNITO_CLIENT_ID",
        "$COGNITO_CLIENT_SECRET",
        "$COGNITO_ISSUER",
        "$GITHUB_ID",
        "$GITHUB_SECRET",
        "$GOOGLE_CLIENT_ID",
        "$GOOGLE_CLIENT_SECRET",
        "$ISSUER_URL",
        "$NETLIFY_CLIENT_ID",
        "$NETLIFY_CLIENT_SECRET",
        "$NEXTAUTH_SECRET"
      ]
    },
    "client#build": {
      "dependsOn": ["$API_ENDPOINT"]
    },
    "payments-server#build": {
      "dependsOn": [
        "$STRIPE_SECRET_KEY",
        "$STRIPE_SECRET_KEY_LIVE",
        "$STRIPE_WEBHOOK_SECRET",
        "$STRIPE_WEBHOOK_SECRET_LIVE"
      ]
    },
    "web#build": {
      "dependsOn": [
        "$AUTH_BEARER_TOKEN",
        "$NEXT_PUBLIC_AWS_REGION",
        "$NEXT_PUBLIC_COGNITO_DOMAIN",
        "$NEXTAUTH_URL",
        "$ISSUER_URL",
        "$NEXTAUTH_SECRET",
        "$NEXT_PUBLIC_ROOT_URL",
        "$NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE",
        "$NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "$NEXT_PUBLIC_USER_POOL_ID",
        "$NEXT_PUBLIC_USER_POOL_CLIENT_ID",
        "$NODE_ENV",
        "$TEAM_ID_VERCEL",
        "$VERCEL"
      ]
    },
    "api#build": {
      "dependsOn": ["$OPENAI_API_KEY"]
    },
    "grafbase#build": {
      "dependsOn": [
        "$AWS_REGION",
        "$AWS_ACCESS_KEY",
        "$AWS_SECRET_ACCESS_KEY",
        "$COGNITO_USER_POOL_ID",
        "$STRIPE_SECRET_KEY",
        "$STRIPE_SECRET_KEY_LIVE"
      ]
    },
    "lint": {
      "outputs": []
    }
  }
}
